<div class="btn-group pull-right">
      <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound" ), :class => "btn btn-warning") %>
      <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound" ), :class => "btn btn-info") %>
      <%= link_to("按照发表时间排序", jobs_path, :class => "btn btn-success") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>职位</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= link_to(job.title, job_path(job)) %>
        </td>
        <td>
          <%= job.wage_lower_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= job.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
