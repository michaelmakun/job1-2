<div class="pull-right">
  <%= link_to("增加职位", new_job_path, :class => "btn btn-primary btn-sm") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>职位</td>
      <td>管理选项</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td><%= link_to(job.title, job_path(job)) %></td>
    <td>
      <%= link_to("编缉职位", edit_job_path(job), :class => "btn btn-success btn-sm") %>
      <%= link_to("删除职位", job_path(job), :method => :delete, :class => "btn btn-danger btn-sm", :data => { :confirm => "Are you sure? "}) %>

    </td>
    <td><%= job.created_at %></td>
  </tr>
  <% end %>
</table>
